# ============================================
# CONFIGURACIÓN DE BASE DE DATOS
# ============================================
# Formato: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:password_seguro@localhost:5432/finanzas

# ============================================
# SEGURIDAD - JWT
# ============================================
# Generar con: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# Mínimo 64 caracteres hexadecimales (256 bits)
JWT_SECRET=genera_un_secreto_seguro_de_al_menos_64_caracteres_hex_aqui

# ============================================
# CONFIGURACIÓN DEL SERVIDOR
# ============================================
PORT=3001

# Orígenes permitidos para CORS (separados por comas)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Habilitar/deshabilitar escrituras en ledger
LEDGER_WRITE_ENABLED=true

# Entorno: development | production
NODE_ENV=development
